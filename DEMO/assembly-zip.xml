<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>assembly-demo.zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>demo-root</directory>
            <outputDirectory>${demo.root}</outputDirectory>
            <includes>
                <include>start</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>demo-root</directory>
            <outputDirectory>${demo.root}</outputDirectory>
            <excludes>
                <exclude>start</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org.eclipse.jetty:jetty-home</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/webapps/**/*</exclude>
                    <exclude>**/conf/server.xml</exclude>
                </excludes>
            </unpackOptions>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${demo.root}/webapps/webstudio</outputDirectory>
            <includes>
                <include>org.openl.rules:org.openl.rules.webstudio</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${demo.root}/webapps/webservice</outputDirectory>
            <includes>
                <include>org.openl.rules:org.openl.rules.ruleservice.ws</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${demo.root}/lib/ext</outputDirectory>
            <includes>
                <include>com.h2database:h2</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
