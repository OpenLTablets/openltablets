<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>assembly-demo.zip</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>ROOT</directory>
            <outputDirectory>${jetty.webapps}/ROOT</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>jetty-conf</directory>
            <outputDirectory>${jetty.root}</outputDirectory>
            <includes>
                <include>start</include>
                <include>stop</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>jetty-conf</directory>
            <outputDirectory>${jetty.root}</outputDirectory>
            <excludes>
                <exclude>start</exclude>
                <exclude>stop</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>data</directory>
            <outputDirectory>${jetty.root}</outputDirectory>
            <excludes>
                <exclude>openl-demo/repositories/design.git/</exclude>
            </excludes>
        </fileSet>
        <!-- .git folder is ignored by VCS and by maven-assembly-plugin. -->
        <fileSet>
            <directory>data/openl-demo/repositories/design.git</directory>
            <outputDirectory>${jetty.root}/openl-demo/repositories/design/.git</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/</outputDirectory>
            <includes>
                    <include>org.eclipse.jetty:jetty-distribution</include>
            </includes>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/webapps/**/*</exclude>
                    <exclude>**/conf/server.xml</exclude>
                </excludes>
            </unpackOptions>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${jetty.webapps}/webstudio</outputDirectory>
            <includes>
                <include>org.openl.rules:org.openl.rules.webstudio</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${jetty.webapps}/webservice</outputDirectory>
            <includes>
                <include>org.openl.rules:org.openl.rules.ruleservice.ws</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <outputDirectory>${jetty.lib}</outputDirectory>
            <includes>
                <include>com.h2database:h2</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>
