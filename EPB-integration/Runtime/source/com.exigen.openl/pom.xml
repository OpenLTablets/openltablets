<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<properties>
		<com.exigen.common.version>7.0.0-SNAPSHOT</com.exigen.common.version>
	</properties>

	<parent>
		<artifactId>base</artifactId>
		<groupId>com.exigen</groupId>
		<version>7.0.005</version>
		<relativePath>../com.exigen.base</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.exigen.openl</groupId>
	<artifactId>openl</artifactId>
	<packaging>pom</packaging>
	<name>Exigen OpenL Rules (Runtime)</name>
	<version>7.0.0-SNAPSHOT</version>
	<description>
		This POM file builds Exigen OpenL Rules run-time JAR files.
	</description>
	<build>
		<defaultGoal>install</defaultGoal>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>build-helper-maven-plugin</artifactId>
					<executions>
						<execution>
							<id>add-source</id>
							<phase>generate-sources</phase>
							<goals>
								<goal>add-source</goal>
							</goals>
							<configuration>
								<sources>
									<source>src/main/gen_java</source>
								</sources>
							</configuration>
						</execution>
					</executions>
				</plugin>				
				<plugin>
					<artifactId>maven-source-plugin</artifactId>
					<executions>
						<execution>
							<id>attach-sources</id>
							<goals>
								<goal>jar</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<modules>
		<module>../com.exigen.openl.model</module>
		<module>../com.exigen.openl.importer</module>
	</modules>
	<dependencies>
		<dependency>
			<groupId>com.exigen.common</groupId>
			<artifactId>common</artifactId>
			<version>${com.exigen.common.version}</version>
			<type>pom</type>
		</dependency>
	</dependencies>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.exigen.common</groupId>
				<artifactId>model</artifactId>
				<version>${com.exigen.common.version}</version>
			</dependency>
			<dependency>
				<groupId>com.exigen.common</groupId>
				<artifactId>components</artifactId>
				<version>${com.exigen.common.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>

