<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.exigen</groupId>
        <artifactId>base</artifactId>
        <version>7.0-SNAPSHOT</version>
        <relativePath>../com.exigen.base</relativePath>
    </parent>
    <groupId>com.exigen.openl</groupId>
    <artifactId>eclipse.openl.sourceTemplatePlugin</artifactId>
    <version>7.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Exigen OpenL Rules Sources</name>
    <description>
		This POM copy runtime projects source code
	</description>    
    <build>              
	<plugins>
		<plugin>
          	    <groupId>com.exigen.maven.plugins</groupId>
          	    <artifactId>mvn-utils</artifactId>
		    <version>1.0</version>
          	    <executions>
	    		<execution>
	       		    <configuration>
                  		<versionReplace>${versionReplace}</versionReplace>
                  		<versionReplaceList>${versionReplaceList}</versionReplaceList>	    				
               		    </configuration>
	       		    <goals>
	         	 	<goal>versionChange</goal>				
	       		    </goals>
			</execution>
		    </executions>
        	</plugin> 
		<plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>2.0-alpha-1-SNAPSHOT</version>
                    <executions>
                        <execution>
                            <id>copy</id>
                            <phase>package</phase>
                            <goals>
                                <goal>copy</goal>
                            </goals>
                            <configuration>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>com.exigen.openl</groupId>
                                        <artifactId>model</artifactId>
                                        <version>${pom.version}</version>                                    
                                        <destFileName>com.exigen.openl.modelsrc.zip</destFileName>
				        <outputDirectory>src\com.exigen.eclipse.openl.model_${pom.version}\lib</outputDirectory>										   					          					
	                                <classifier>sources</classifier>
                                    </artifactItem>
                                 </artifactItems>				 					                                    
				 <type>jar</type> 
				 <overWriteReleases>false</overWriteReleases>
                                 <overWriteSnapshots>true</overWriteSnapshots>
				 <excludeTransitive>true</excludeTransitive>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>	    
	</plugins>
    </build>
</project>
