<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.liveexcel-pom</artifactId>
    <version>0.3-SNAPSHOT</version>
    <relativePath>../org.openl.rules.liveexcel-pom</relativePath>
  </parent>

  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.rules.liveexcel.eclipse.site</artifactId>
  <packaging>pom</packaging>
  <name>LiveExcel - Eclipse Site</name>
  <description>LiveExcel Eclipse update site</description>
  <url>http://openl-tablets.sf.net/</url>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>site</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/assembly-site.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.liveexcel</artifactId>
    </dependency>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.liveexcel.lib</artifactId>
    </dependency>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.liveexcel.extension</artifactId>
    </dependency>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.liveexcel.eclipse.feature</artifactId>
    </dependency>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.liveexcel.eclipse.ui</artifactId>
    </dependency>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.liveexcel.eclipse.wizard</artifactId>
    </dependency>
  </dependencies>

</project>
