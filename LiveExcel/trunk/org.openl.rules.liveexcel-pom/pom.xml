<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.base-pom</artifactId>
    <version>5.3.0-SNAPSHOT</version>
  </parent>

  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.rules.liveexcel-pom</artifactId>
  <packaging>pom</packaging>
  <version>5.3.0-SNAPSHOT</version>
  <name>OpenL - Live Excel - Base POM</name>
  <description>Dev</description>
  <url>http://openl-tablets.sourceforge.net/ws-toc401.shtml</url>

  <modules>
    <module>../org.openl.lib.poi35.dev-pom</module>
    <module>../org.openl.rules.liveexcel</module>
  </modules>


  <properties>
    <dep.version>5.3.0-SNAPSHOT</dep.version>
  </properties>

  <scm>
    <connection>scm:svn:https://svn-rix.exigengroup.lv/svn/EPB/EPB/DecisionServices/OpenL/LiveExcel/trunk</connection>
<developerConnection>scm:svn:https://svn-rix.exigengroup.lv/svn/EPB/EPB/DecisionServices/OpenL/LiveExcel/trunk</developerConnection>
  </scm>

  <repositories>
    <repository>
      <id>local</id>
      <url>file://${basedir}/../org.openl.rules.liveexcel-pom/m2_repo</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>local</id>
      <url>file://${basedir}/../org.openl.rules.liveexcel-pom/m2_repo</url>
    </pluginRepository>
  </pluginRepositories>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <configLocation>../org.openl.rules.liveexcel-pom/checkstyle.xml</configLocation>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

  <profiles>
    <profile>
      <id>internal-deploy</id>
      <distributionManagement>
        <site>
          <id>internal-minsk</id>
          <url>file://d:/reports/org.openl.rules.liveexcel-pom</url>
        </site>
      </distributionManagement>
    </profile>

    <profile>
      <id>cobertura-summary-report</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <inherited>true</inherited>
            <configuration>
              <tasks>
                <taskdef resource="tasks.properties" />

                <cobertura-merge datafile="target\cobertura-merged-file.ser">
                  <fileset dir="..">
                    <include name="org.openl.lib.poi35.dev\target\cobertura\cobertura.ser" />
                    <include name="org.openl.lib.poi35.dev.modified\target\cobertura\cobertura.ser" />
                    <include name="org.openl.lib.poi35.dev.modified.test\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.liveexcel\target\cobertura\cobertura.ser" />
                  </fileset>
                </cobertura-merge>

                <cobertura-report datafile="target\cobertura-merged-file.ser" destdir="target\site\cobertura-summary">
                  <fileset dir="..\org.openl.lib.poi35.dev.modified\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.lib.poi35.dev.modified.test\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.liveexcel\src\">
                    <include name="**\*.java" />
                  </fileset>
                </cobertura-report>
              </tasks>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>


  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
  </dependencies>

  <dependencyManagement>
    <dependencies>

      <dependency>
        <groupId>org.openl.rules</groupId>
        <artifactId>org.openl.rules.webstudio.lib</artifactId>
        <version>${dep.version}</version>
      </dependency>

    </dependencies>
  </dependencyManagement>

</project>