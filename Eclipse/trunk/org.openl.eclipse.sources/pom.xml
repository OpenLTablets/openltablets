  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/assembly-sources.xml</descriptor>
              </descriptors>
              <archive>
                <manifestEntries>
                  <Bundle-Name>OpenL Tablets</Bundle-Name>
                  <Bundle-SymbolicName>org.openl.eclipse.sources</Bundle-SymbolicName>
                  <Bundle-Version>${openl.version}</Bundle-Version>
                  <Bundle-Localization>plugin</Bundle-Localization>
                  <Bundle-Vendor>OpenL Tablets</Bundle-Vendor>
                </manifestEntries>
              </archive>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>

  </build>

