  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.rules.webstudio.lib</artifactId>
  <packaging>jar</packaging>
  <name>OpenL - STUDIO - WebStudio Libraries</name>
  <description>OpenL WebStudio Libraries</description>
  <url>http://openl-tablets.sf.net/</url>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>${project.build.directory}/../lib</directory>
              <includes>
                <include>**/*.jar</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/../lib</outputDirectory>
              <excludeGroupIds>org.openl,org.openl.rules,org.apache.poi</excludeGroupIds>
              <excludeArtifactIds>junit,servlet-api,jsp-api,org.openl.lib</excludeArtifactIds>
              <overWriteReleases>true</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
              <type>jar</type>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>

    <resources>
      <resource>
        <directory>${project.build.directory}/..</directory>
        <includes>
          <include>lib/**/*.jar</include>
        </includes>
        <!-- Exclude poi-2.x - optional dependency from DbUnit -->
        <excludes>
          <exclude>lib/poi-2.5.1-final-20040804.jar</exclude>
        </excludes>
      </resource>
    </resources>
  </build>
  
