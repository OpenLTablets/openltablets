int main(String[] args)
{
	String greeting = defineCurrentGreeting();

	//	define Person using XML file Person.xml	
 	Person person = Person.load("src/xml/Person.xml");
	System.out.println("Person: "+person);
 	
	String prefix = definePrefix(person);
	//greet Person	
	System.out.println(greeting+", "+prefix+person.name+"!");
   
	return 0;	
}

// define Greeting
String defineCurrentGreeting()
{
	int hour = Calendar.getInstance().get(Calendar.HOUR_OF_DAY);
	
	String greeting = "?";
	if (hour > 0 && hour <= 12)
		greeting = "Good Morning";
	else
	if (hour > 12 && hour <= 18)
		greeting = "Good Afternoon";
	else
	if (hour > 18 && hour <= 21)
		greeting = "Good Evening";
	else
	if (hour > 21 && hour <= 24)
		greeting = "Good Night";
	return greeting;
}

// define prefix
String definePrefix(Person person)
{
	String prefix;
	int age = Integer.parseInt(person.age);
	if (age < 20)
		return "";
	if (person.gender.equals("M"))
		 prefix = "Mr.";
	else
	{
		 if (!person.maritalStatus.equals("Single"))	
			 prefix = "Mrs.";
		 else
			 prefix = "Ms.";
	}
	return prefix;
}
