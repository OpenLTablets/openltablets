// openl script
// define Greeting
int hour = Calendar.getInstance().get(Calendar.HOUR_OF_DAY);

String greeting;
if (hour > 0 && hour <= 12)
	greeting = "Good Morning";
else
if (hour > 12 && hour <= 18)
	greeting = "Good Afternoon";
else
if (hour > 18 && hour <= 21)
	greeting = "Good Evening";
else
if (hour > 21 && hour <= 24)
	greeting = "Good Night";

// define Customer using Java class Customer	
Customer customer = new Customer();
customer.setName("Robinson");
customer.setGender("F");
customer.setMaritalStatus("Married");

// define prefix
String prefix;
if (customer.getGender().equals("M"))
	prefix = "Mr.";
else
{
	if (!customer.getMaritalStatus().equals("Single"))	
		prefix = "Mrs.";
	else
		prefix = "Ms.";
}

//greet Customer	
System.out.println(greeting+", "+prefix+customer.getName()+"!");
