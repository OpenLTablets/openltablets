<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <includeBaseDirectory>false</includeBaseDirectory>

  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>.</directory>
      <includes>
        <include>plugin.xml</include>
      </includes>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputFileNameMapping>src.zip</outputFileNameMapping>
      <outputDirectory>src/${artifact.artifactId}_${openl.version}</outputDirectory>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <includes>
        <include>*sources*</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>
