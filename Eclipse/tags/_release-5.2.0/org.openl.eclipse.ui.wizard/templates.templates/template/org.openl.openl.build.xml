<project default="build.org.openl.openl">

<taskdef name="openl" classname="org.openl.conf.ant.AntOpenLTask"/>

 <property file="../openl.config/OpenL.properties"/>

 <property file="openl.local.properties"/>
 
<target name="build.org.openl.openl">
   <echo message="Building org.openl.openl ..."/>	
 
 	<ant antfile="org.openl.j.xml.dom.build.xml" 
    target="build.org.openl.j.xml.dom" 
    dir="${eclipse.home}/plugins/org.openl.j_${openl.version}"
 	/>	
 
   <openl category="org.openl.openl" 
     extendscategory="org.openl.j.xml.dom"
     description="This is openl extension of a org.openl.j.xml.dom">
 
  <types>
    <typelibrary namespace="org.openl.this">

<!--
      <schema factory="dom.factory" file="<your-xml-file" />
-->      

      <javaimport all="${openl.local.imports}"/>
   
    </typelibrary>
  </types>
    
 </openl>
 	
</target>


</project>
