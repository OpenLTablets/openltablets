<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>eclipse.model</artifactId>
    <parent>
        <groupId>com.exigen.openl</groupId>
        <artifactId>eclipse.openl</artifactId>
        <version>7.0.0-SNAPSHOT</version>
        <relativePath>../com.exigen.eclipse.openl</relativePath>
    </parent>
    <packaging>pom</packaging>
    <name>Exigen OpenL Rules Model (Eclipse plug-in)</name>
    <description>
		This POM file packages Exigen Studio EMF models as JAR files into
		Exigen OpenL Rules EMF model plug-in.
	</description>
    <dependencies>
        <dependency>
            <groupId>com.exigen.openl</groupId>
            <artifactId>model</artifactId>
            <version>7.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>2.0-alpha-1-SNAPSHOT</version>
                <executions>
                    <execution>
                        <id>copy</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.exigen.openl</groupId>
                                    <artifactId>model</artifactId>
                                    <version>${pom.version}</version>
                                    <type>jar</type>
                                    <overWrite>true</overWrite>
                                    <destFileName>com.exigen.openl.model.jar</destFileName>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>lib</outputDirectory>
                            <overWriteReleases>false</overWriteReleases>
                            <overWriteSnapshots>true</overWriteSnapshots>
                        </configuration>
                    </execution>
                </executions>
            </plugin>	    
        </plugins>
    </build>
</project>
