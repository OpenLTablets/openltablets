<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>eclipse.openl</artifactId>
    <groupId>com.exigen.openl</groupId>
    <version>7.0.0-SNAPSHOT</version>
    <relativePath>../com.exigen.eclipse.openl</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.exigen.openl</groupId>
  <artifactId>eclipse.facet</artifactId>
  <packaging>pom</packaging>
  <name>Exigen OpenL Facet (Eclipse plug-in)</name>
  <description>This POM file packages OpenL Java libraries and implement facet functionality.</description>
  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0-alpha-1-SNAPSHOT</version>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                    <groupId>com.exigen.openl</groupId>
                    <artifactId>importer</artifactId>
                    <version>${pom.version}</version>
                    <type>jar</type>
                    <overWrite>true</overWrite>
                    <destFileName>com.exigen.openl.importer.jar</destFileName>
                </artifactItem>
                <artifactItem>
                  <groupId>org.openl</groupId>
                  <artifactId>commons</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>org.openl</groupId>
                  <artifactId>core</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>org.openl</groupId>
                  <artifactId>j</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>org.openl</groupId>
                  <artifactId>lib-apache-poi-modified</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>org.openl</groupId>
                  <artifactId>rules</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>org.openl</groupId>
                  <artifactId>rules-helpers</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>commons-lang</groupId>
                  <artifactId>commons-lang</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
                <artifactItem>
                  <groupId>commons-logging</groupId>
                  <artifactId>commons-logging</artifactId>
                  <type>jar</type>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
              <outputDirectory>lib</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

