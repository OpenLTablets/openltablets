                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.validator\src\">
                    <include name="**\*.java" />
                  </fileset>
                </cobertura-report>
              </tasks>
            </configuration>
          </plugin>
        </plugins>
      </build>
