<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <id>assembly-core.zip</id>
  <includeBaseDirectory>false</includeBaseDirectory>

  <formats>
    <format>zip</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}_${openl.version.eclipse}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>libs</outputDirectory>
      <useTransitiveDependencies>true</useTransitiveDependencies>
      <excludes>
        <exclude>org.openl*:*</exclude>
      </excludes>
    </dependencySet>

    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}_${openl.version.eclipse}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory></outputDirectory>
      <includes>
        <include>org.openl*:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <source>target/${project.build.finalName}.jar</source>
      <outputDirectory></outputDirectory>
    </file>
  </files>
</assembly>
