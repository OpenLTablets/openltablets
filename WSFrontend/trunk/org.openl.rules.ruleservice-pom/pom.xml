<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.openl.rules</groupId>
		<artifactId>org.openl.rules.base-pom</artifactId>
		<version>5.9.0</version>
		<relativePath /><!-- Workaround to prevent warning. See: http://jira.codehaus.org/browse/MNG-4687 -->
	</parent>

	<groupId>org.openl.rules</groupId>
	<artifactId>org.openl.rules.ruleservice-pom</artifactId>
	<version>5.9.2-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>OpenL - RuleService</name>
	<description>Rules Service Pom Project</description>
	<url>http://openl-tablets.sf.net/</url>

	<scm>
		<connection>scm:svn:https://svn-rix.exigengroup.lv/svn/EPB/EPB/DecisionServices/OpenL/WSFrontend/trunk</connection>
		<developerConnection>scm:svn:https://svn-rix.exigengroup.lv/svn/EPB/EPB/DecisionServices/OpenL/WSFrontend/trunk</developerConnection>
		<url>http://openl-tablets.svn.sourceforge.net/viewvc/openl-tablets/</url>
	</scm>

	<modules>
		<module>../org.openl.rules.ruleservice</module>
		<module>../org.openl.rules.ruleservice.ws</module>
	</modules>

	<repositories>
		<repository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
			<id>local-wsfrontend-repo</id>
			<url>file:///${basedir}/../org.openl.rules.ruleservice-pom/m2_repo</url>
		</repository>

		<repository>
			<id>apache-incubating</id>
			<url>http://people.apache.org/repo/m2-incubating-repository/</url>
		</repository>
	</repositories>

	<pluginRepositories>
		<pluginRepository>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
			</snapshots>
			<id>local-wsfrontend-plugin-repo</id>
			<url>file:///${basedir}/../org.openl.rules.ruleservice-pom/m2_repo</url>
		</pluginRepository>
	</pluginRepositories>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>../org.openl.rules.ruleservice-pom/checkstyle.xml</configLocation>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<profiles>
		<profile>
			<id>internal-deploy</id>
			<distributionManagement>
				<site>
					<id>internal-minsk</id>
					<url>file://d:/reports/org.openl.rules.ruleservice-pom</url>
				</site>
			</distributionManagement>
		</profile>

		<profile>
			<id>cobertura-summary-report</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<inherited>true</inherited>
						<configuration>
							<tasks>
								<taskdef resource="tasks.properties" />

								<cobertura-merge datafile="target\cobertura-merged-file.ser">
									<fileset dir="..">
										<include name="org.openl.rules.ruleservice\target\cobertura\cobertura.ser" />
									</fileset>
								</cobertura-merge>

								<cobertura-report datafile="target\cobertura-merged-file.ser" destdir="target\site\cobertura-summary">
									<fileset dir="..\org.openl.rules.ruleservice\src\">
										<include name="**\*.java" />
									</fileset>
								</cobertura-report>
							</tasks>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules.ruleservice</artifactId>
				<version>${project.version}</version>
			</dependency>

			<!-- DEV -->
			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl</groupId>
				<artifactId>org.openl.core</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl</groupId>
				<artifactId>org.openl.j</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl</groupId>
				<artifactId>org.openl.conf.ant</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<!-- STUDIO -->
			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules.repository</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules.repository.jcr</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules.repository.jcr.jackrabbit</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules.workspace</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>

			<dependency>
				<groupId>org.openl.rules</groupId>
				<artifactId>org.openl.rules.project</artifactId>
				<version>${openl.version.maven}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

</project>