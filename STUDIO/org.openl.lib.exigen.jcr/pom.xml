<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.lib.exigen.jcr</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Library for Exigen JCR</name>
  <url>http://openl-tablets.sourceforge.net/</url>
  <description>Manages Jars for Exigen JCR in a old way (pre maven2)</description>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>com.exigen.cm.jcr.runtime</groupId>
      <artifactId>exigen-jcr-core</artifactId>
      <version>7.0.0-SNAPSHOT</version>
    </dependency>

    <dependency>
      <groupId>com.exigen.cm.jcr.runtime.database</groupId>
      <artifactId>exigen-jcr-dialect-oracle</artifactId>
      <version>7.0.0-SNAPSHOT</version>
      <scope>deploy</scope>
    </dependency>

    <dependency>
      <groupId>com.oracle</groupId>
      <artifactId>ojdbc14</artifactId>
      <version>10.2.0.2.0</version>
      <scope>deploy</scope>
    </dependency>

    <dependency>
      <groupId>simple-jndi</groupId>
      <artifactId>simple-jndi</artifactId>
      <version>0.11.1</version>
      <scope>deploy</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <excludeGroupIds>org.openl.rules</excludeGroupIds>
              <excludeScope>test</excludeScope>
              <outputDirectory>libs</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>true</overWriteSnapshots>
              <type>jar</type>
            </configuration>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

</project>
