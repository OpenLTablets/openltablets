  <groupId>org.openl</groupId>
  <artifactId>org.openl.eclipse.site</artifactId>
  <name>org.openl.eclipse.site</name>
  <description></description>
  <packaging>pom</packaging>

  <properties>
    <studio.eclipse.version>5.0.6</studio.eclipse.version>
  </properties>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>lib</id>
            <phase>package</phase>
            <goals>
              <goal>assembly</goal>
            </goals>
            <configuration>
              <finalName>org.openl.rules.webstudio.lib_${studio.eclipse.version}</finalName>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>src/main/assembly/assembly-lib.xml</descriptor>
              </descriptors>
              <archive>
                <manifestFile>../org.openl.rules.webstudio.lib/META-INF/MANIFEST.MF</manifestFile>
              </archive>
            </configuration>
          </execution>

          <execution>
            <id>site</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/assembly-site.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

