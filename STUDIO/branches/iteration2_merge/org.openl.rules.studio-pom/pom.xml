            <outFile>${pom.artifactId}.png</outFile>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins />
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
