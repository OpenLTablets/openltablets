        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports>
              <report>index</report>
              <report>dependencies</report>
              <report>summary</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>taglist-maven-plugin</artifactId>
        <configuration>
          <tags>
            <tag>TODO</tag>
            <tag>FIXME</tag>
            <tag>@todo</tag>
          </tags>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javancss-maven-plugin</artifactId>
        <version>2.0-beta-2-fix</version>
      </plugin>
    </plugins>
  </reporting>

  <profiles>
    <profile>
      <id>internal-deploy</id>
      <distributionManagement>
        <site>
          <id>internal-minsk</id>
          <url>file://d:/reports/org.openl.rules.studio-pom</url>
        </site>
      </distributionManagement>
      <build>
        <plugins>
          <plugin>
            <groupId>ch.elca.el4j.maven.plugins</groupId>
            <artifactId>maven-depgraph-plugin</artifactId>
            <executions>
              <execution>
                <id>depgraph</id>
                <phase>site</phase>
                <goals>
                  <goal>depgraph</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>cobertura-summary-report</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <inherited>false</inherited>
            <configuration>
              <tasks>
                <taskdef resource="tasks.properties" />

                <cobertura-merge datafile="target\cobertura-merged-file.ser">
                  <fileset dir="..">
                    <include name="org.openl.rules.diff\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.repository\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.repository.jcr\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.repository.jcr.jackrabbit\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.security\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.security.standalone\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.webstudio.java\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.webtools\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.workspace\target\cobertura\cobertura.ser" />
                  </fileset>
                </cobertura-merge>

                <cobertura-report datafile="target\cobertura-merged-file.ser" destdir="target\site\cobertura-summary">
                  <fileset dir="..\org.openl.rules.diff\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.repository\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.repository.jcr\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.repository.jcr.jackrabbit\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.security\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.security.standalone\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.webstudio.java\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.webtools\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.workspace\src\">
                    <include name="**\*.java" />
                  </fileset>
                </cobertura-report>
              </tasks>
            </configuration>
            <dependencies>
              <dependency>
                <groupId>net.sourceforge.cobertura</groupId>
                <artifactId>cobertura</artifactId>
                <version>1.9</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

