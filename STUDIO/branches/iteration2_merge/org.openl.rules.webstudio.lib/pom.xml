<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!--
    TODO: extract jackrabbit libraries into single lib-project
  -->

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.studio-pom</artifactId>
    <version>5.0.6-SNAPSHOT</version>
    <relativePath>../org.openl.rules.studio-pom</relativePath>
  </parent>

  <artifactId>org.openl.rules.webstudio.lib</artifactId>
  <name>OpenL - STUDIO - WebStudio Libraries</name>
  <description></description>

  <build>

    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.1</version>
          <configuration>
            <tasks>
              <delete includeemptydirs="true" failonerror="false">
                <fileset dir="lib" includes="**/*" />
              </delete>
            </tasks>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.openl.rules</groupId>
          <artifactId>maven-libsupport-plugin</artifactId>
          <version>1.0-SNAPSHOT</version>

          <configuration>
            <artifactItems>
              <artifactItem>
                <groupId>org.openl.rules</groupId>
                <artifactId>org.openl.rules.webstudio.java</artifactId>
                <version>${version}</version>
              </artifactItem>
            </artifactItems>
            <outputDirectory>${project.build.directory}/../lib</outputDirectory>
            <excludeArtifactIds>org\.open.*,com\.exigen\.rules.*</excludeArtifactIds>
          </configuration>
        </plugin>

        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-jar-plugin</artifactId>
          <configuration>
            <archive>
              <manifestFile>META-INF/MANIFEST.MF</manifestFile>
            </archive>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
