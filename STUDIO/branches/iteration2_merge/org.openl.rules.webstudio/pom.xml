<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.studio-pom</artifactId>
    <version>5.0.6-SNAPSHOT</version>
    <relativePath>../org.openl.rules.studio-pom</relativePath>
  </parent>

  <artifactId>org.openl.rules.webstudio</artifactId>
  <name>Exigen WebStudio Web Resources</name>
  <description></description>
  <packaging>jar</packaging>

  <properties>
    <war.name>${artifactId}-${version}</war.name>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestFile>META-INF/MANIFEST.MF</manifestFile>
          </archive>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <ignoreDirFormatExtensions>true</ignoreDirFormatExtensions>
          <finalName>${artifactId}</finalName>
        </configuration>
        <executions>
          <execution>
            <id>assembly</id>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/main/assembly/assembly-template.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>

    <resources>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
        </includes>
      </resource>
      <resource>
        <directory>conf</directory>
        <targetPath>conf</targetPath>
      </resource>
      <resource>
        <directory>webapps</directory>
        <targetPath>webapps</targetPath>
      </resource>
    </resources>
  </build>

  <profiles>
    <profile>
      <id>build-war</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <executions>
              <execution>
                <id>war</id>
                <phase>package</phase>
                <goals>
                  <goal>war</goal>
                </goals>
                <configuration>
                  <warSourceDirectory>webapps/webstudio</warSourceDirectory>
                  <warName>${war.name}</warName>
                  <primaryArtifact>false</primaryArtifact>
                </configuration>
              </execution>
              <execution>
                <id>tomcat6-war</id>
                <phase>package</phase>
                <goals>
                  <goal>war</goal>
                </goals>
                <configuration>
                  <warSourceDirectory>webapps/webstudio</warSourceDirectory>
                  <warName>${war.name}-tomcat6</warName>
                  <primaryArtifact>false</primaryArtifact>
                  <warSourceExcludes>WEB-INF/lib/el-api-1.0.jar</warSourceExcludes>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-artifacts</id>
                <phase>package</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>target/${war.name}.war</file>
                      <type>war</type>
                    </artifact>
                    <artifact>
                      <file>target/${war.name}-tomcat6.war</file>
                      <classifier>tomcat6</classifier>
                      <type>war</type>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.webstudio.java</artifactId>
    </dependency>
  </dependencies>

</project>
