<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

  <lifecycle>
    <phase-listener>org.openl.rules.webstudio.web.tableeditor.TableEditorAjaxDispatcher</phase-listener>
  </lifecycle>

  <managed-bean>
    <managed-bean-name>tableEditorController</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.tableeditor.TableEditorController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>tableViewController</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.tableeditor.JSFTableViewController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>elementID</property-name>
      <value>#{param.elementID}</value>
    </managed-property>
    <managed-property>
      <property-name>view</property-name>
      <value>#{param.view}</value>
    </managed-property>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>tableWriterBean</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.tableeditor.TableWriterBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>editorBean</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.tableeditor.EditorBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>topEditorBean</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.tableeditor.TopEditorBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>popupEditorBean</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.tableeditor.PopupEditorBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>studioOpener</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.studio.StudioFromLWSController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>localWorkspaceManager</property-name>
      <value>#{localWorkspaceManager}</value>
    </managed-property>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>localUpload</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.web.repository.LocalUploadController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <navigation-rule>
    <navigation-case>
      <from-outcome>tableEditor_success</from-outcome>
      <to-view-id>/jsp/tableeditor/tableEditorResponse.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <navigation-rule>
    <from-view-id>/repository/main.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>webstudio</from-outcome>
      <to-view-id>/jsp/index_jsf.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
</faces-config>
