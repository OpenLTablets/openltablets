<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <lifecycle>
        <phase-listener>org.openl.rules.tableeditor.event.TableEditorDispatcher</phase-listener>
    </lifecycle>

    <managed-bean>
        <managed-bean-name>_tableEditorController</managed-bean-name>
        <managed-bean-class>
            org.openl.rules.tableeditor.event.TableEditorController
        </managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <component>
        <component-type>
            org.openl.rules.tableeditor.TableViewer
        </component-type>
        <component-class>
            org.openl.rules.tableeditor.component.UITableViewer
        </component-class>
        <component-extension>
            <renderer-type>
                org.openl.rules.tableeditor.TableViewer
            </renderer-type>
        </component-extension>
    </component>

    <component>
        <component-type>
            org.openl.rules.tableeditor.TableEditor
        </component-type>
        <component-class>
            org.openl.rules.tableeditor.component.UITableEditor
        </component-class>
        <component-extension>
            <renderer-type>
                org.openl.rules.tableeditor.TableEditor
            </renderer-type>
        </component-extension>
    </component>

    <render-kit>
        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>
                org.openl.rules.tableeditor.TableViewer
            </renderer-type>
            <renderer-class>
                org.openl.rules.tableeditor.renderkit.TableViewerRenderer
            </renderer-class>
        </renderer>

        <renderer>
            <component-family>javax.faces.Output</component-family>
            <renderer-type>
                org.openl.rules.tableeditor.TableEditor
            </renderer-type>
            <renderer-class>
                org.openl.rules.tableeditor.renderkit.TableEditorRenderer
            </renderer-class>
        </renderer>
    </render-kit>

</faces-config>
