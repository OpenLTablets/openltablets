      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>tomcat-maven-plugin</artifactId>
        <configuration>
          <url>http://openl.internal.corp:8081/manager</url>
          <server>openl-tomcat-server</server>
          <path>/webstudio</path>
          <warFile>target/${war.name}.war</warFile>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.webstudio.java</artifactId>
    </dependency>

    <dependency>
      <groupId>org.openl.rules</groupId>
      <artifactId>org.openl.rules.tableeditor</artifactId>
    </dependency>
  </dependencies>

</project>