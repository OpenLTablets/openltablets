  <profiles>
    <profile>
      <id>internal-deploy</id>
      <distributionManagement>
        <site>
          <id>internal-minsk</id>
          <url>file://d:/reports/org.openl.rules.studio-pom</url>
        </site>
      </distributionManagement>
    </profile>

    <profile>
      <id>cobertura-summary-report</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <inherited>true</inherited>
            <configuration>
              <tasks>
                <taskdef resource="tasks.properties" />

                <cobertura-merge datafile="target\cobertura-merged-file.ser">
                  <fileset dir="..">
                    <include name="org.openl.rules.diff\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.tableeditor\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.repository\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.repository.jcr\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.repository.jcr.jackrabbit\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.security\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.security.standalone\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.webstudio.java\target\cobertura\cobertura.ser" />
                    <include name="org.openl.commons.web\target\cobertura\cobertura.ser" />
                    <include name="org.openl.rules.workspace\target\cobertura\cobertura.ser" />
                  </fileset>
                </cobertura-merge>

                <cobertura-report datafile="target\cobertura-merged-file.ser" destdir="target\site\cobertura-summary">
                  <fileset dir="..\org.openl.rules.diff\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.tableeditor\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.repository\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.repository.jcr\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.repository.jcr.jackrabbit\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.security\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.security.standalone\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.webstudio.java\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.commons.web\src\">
                    <include name="**\*.java" />
                  </fileset>
                  <fileset dir="..\org.openl.rules.workspace\src\">
                    <include name="**\*.java" />
                  </fileset>
                </cobertura-report>
              </tasks>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

