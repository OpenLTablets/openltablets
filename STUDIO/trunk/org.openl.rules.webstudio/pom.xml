<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.openl.rules</groupId>
    <artifactId>org.openl.rules.studio-pom</artifactId>
    <version>5.7.3-SNAPSHOT</version>
    <relativePath>../org.openl.rules.studio-pom</relativePath>
  </parent>

  <groupId>org.openl.rules</groupId>
  <artifactId>org.openl.rules.webstudio</artifactId>
  <packaging>war</packaging>
  <name>OpenL - STUDIO - WebStudio Web Resources</name>
  <description>OpenL WebStudio</description>
  <url>http://openl-tablets.sf.net/</url>

  <properties>
    <war.name>${artifactId}-${version}</war.name>
  </properties>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <warSourceDirectory>webapps/webstudio</warSourceDirectory>
          <warName>${war.name}</warName>
          <webResources>
            <resource>
              <directory>webapps</directory>
              <includes>
                <include>project-resolver-beans.xml</include>
              </includes>
            </resource>
          </webResources>
          <packagingExcludes>
            WEB-INF/lib/poi-2.5.1-*.jar,
          </packagingExcludes>
        </configuration>
      </plugin>

      <!--
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
