<project default="copy_all" basedir="..">

<property name="src_root" value=".."/>
<property name="dst_root" value="/___DEV/SOURCEFORGE/examples/eclipse/workspace"/>
	
	
	
<target name = "copy_all">
	<antcall target="copy_project" >
		<param name="plugin_name" 
			value="org.openl.rules.webstudio"/></antcall>	
	<antcall target="copy_project" >
		<param name="plugin_name" value="org.openl.commons.web"/>
	</antcall>	

	<antcall target="copy_tomcat" >
		<param name="plugin_name" value="org.openl.rules.tomcat.lib"/>
	</antcall>	
	
</target>

	<target name = "copy_examples">
		<antcall target="copy_project" ><param name="plugin_name" value="org.openl.tablets.tutorial1"/></antcall>	
		<antcall target="copy_project" ><param name="plugin_name" value="org.openl.tablets.tutorial2"/></antcall>	
		<antcall target="copy_project" ><param name="plugin_name" value="org.openl.tablets.tutorial3"/></antcall>	
		<antcall target="copy_project" ><param name="plugin_name" value="org.openl.tablets.tutorial4"/></antcall>	
	</target>	
		
		
	<target name = "copy_project">
		<echo message="Copying ${plugin_name}"/>
		<copy preservelastmodified="true" todir="${dst_root}/${plugin_name}">
			<fileset dir="${src_root}/${plugin_name}">
				<exclude name="**/CVS/**" />
				<exclude name="**/bin/**" />
			</fileset>
		</copy>
		
	</target>	
		
	<target name = "copy_tomcat">
		
		<copy preservelastmodified="true" todir="${dst_root}/${plugin_name}">
			<fileset dir="${src_root}/${plugin_name}">
				<exclude name="**/CVS/**" />
			</fileset>
		</copy>
		
	</target>	
	
	
	
<target name = "copy_workspace">
	
	<copy preservelastmodified="true" todir="${dst_root}">
		<fileset dir="${src_root}">
			<exclude name="**/CVS/**" />
			<exclude name="**/bin/**" />
			<exclude name="**/.metadata/**" />
			<exclude name="**/com.exigen.demo*/**" />
			<exclude name="**/com.exigen.srp*/**" />
		</fileset>
	</copy>
	
</target>	
	
	
</project>