<project>
	<!--  Project identifier. String value which defines project uniquely. -->
	<id>my-project-id</id>
	<!-- Project name. -->
	<name>Project name</name>

	<!-- OpenL project includes one or more modules.  -->
	<modules>

		<module>
			<name>MyModule1</name>
			<type>static</type>
			<!-- 
				Rules root document. Usually excel file on file system. 
			-->
			<rules-root path="file://MyModule1.xls"/>

		</module>	
		
		<module>
			<name>MyModule2</name>
			<type>api</type>
			<!-- 
				Rules root document. Usually excel file on file system. 
			-->
			<rules-root path="file://MyModule2.xls"/>
			
		</module>	

	</modules>
	
	<!-- Project's classpath. -->
	<classpath>
		<entry path="path1"/>
		<entry path="path2"/>
	</classpath>
	
</project>