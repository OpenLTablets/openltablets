<?xml version="1.0" ?>
<project name="jsfext" default="jar" basedir="..">

	<!-- properties -->
	<property name="dir.dist" value="bin"/>
	<property name="dir.src" value="src"/>
	<property name="compiler.debug" value="on"/>
	<property name="taglib.jar.name" value="openl-jsfext.jar"/>

	<path id="build.classpath">
		<pathelement location="../org.openl.rules.webstudio/lib/myfaces-api-1.1.5.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/myfaces-impl-1.1.5.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-beanutils-1.7.0.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-codec-1.3.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-collections-3.1.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-digester-1.6.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-el-1.0.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-lang-2.1.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/commons-logging-1.0.4.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/jstl-1.1.0.jar"/>
		<pathelement location="../org.openl.rules.webstudio/lib/ajax4jsf-1.1.1.jar"/>

		<pathelement location="../org.openl.lib.apache.tomcat/apache-tomcat-5.5.17/common/lib/jsp-api.jar"/>
		<pathelement location="../org.openl.lib.apache.tomcat/apache-tomcat-5.5.17/common/lib/servlet-api.jar"/>
	</path>

	<!-- targets -->
	<target name="init">
		<mkdir dir="${dir.dist}"/>
	</target>

	<target name="compile" depends="init">
		<javac destdir="${dir.dist}" debug="${compiler.debug}" srcdir="${dir.src}" classpathref="build.classpath"/>
		<copy todir="${dir.dist}">
			<fileset dir="resources" includes="**.*">
				<exclude name="**/.DS_Store/**"/>
				<exclude name="**/.svn/**"/>
			</fileset>
		</copy>
		<copy todir="${dir.dist}">
			<fileset dir="${dir.src}" includes="**/*.js"/>
		</copy>
	</target>


	<target name="jar" depends="compile">
		<jar jarfile="${taglib.jar.name}" basedir="${dir.dist}"/>
	</target>

	<target name="clean">
		<delete dir="${dir.dist}"/>
		<delete file="${taglib.jar.name}"/>
	</target>
</project>