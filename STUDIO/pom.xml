    <packaging>pom</packaging>
    <name>OpenL - STUDIO</name>
    <description>OpenL WebStudio Pom Project</description>

    <modules>
        <module>org.openl.rules.tableeditor</module>
        <module>org.openl.rules.repository</module>
        <module>org.openl.rules.repository.jcr</module>
        <module>org.openl.rules.repository.jcr.jackrabbit</module>
