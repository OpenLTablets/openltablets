<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd"
       default-autowire="no">

    <context:component-scan base-package="org.openl.rules.rest.validation"/>

    <bean id="beanValidationService" class="org.openl.rules.rest.validation.BeanValidationProvider">
        <constructor-arg name="commonValidators">
            <list>
                <bean class="org.springframework.validation.beanvalidation.CustomValidatorBean">
                    <property name="validatorFactory">
                        <bean class="javax.validation.Validation" factory-method="buildDefaultValidatorFactory"/>
                    </property>
                </bean>
            </list>
        </constructor-arg>
    </bean>

</beans>
