<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

  <managed-bean>
    <managed-bean-name>diff</managed-bean-name>
    <managed-bean-class>org.openl.rules.ui.repository.DiffFormController</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>deploymentController</managed-bean-name>
    <managed-bean-class>org.openl.rules.ui.repository.DeploymentController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>repositoryTreeState</property-name>
      <value>#{repositoryTreeState}</value>
    </managed-property>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>uploadService</managed-bean-name>
    <managed-bean-class>org.openl.rules.webstudio.services.upload.UploadService</managed-bean-class>
    <managed-bean-scope>application</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>repositoryTreeState</managed-bean-name>
    <managed-bean-class>org.openl.rules.ui.repository.RepositoryTreeState</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
    <managed-property>
      <property-name>userWorkspace</property-name>
      <value>#{sessionScope.rulesUserSession.userWorkspace}</value>
    </managed-property>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>repositoryTreeController</managed-bean-name>
    <managed-bean-class>org.openl.rules.ui.repository.RepositoryTreeController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>userWorkspace</property-name>
      <value>#{sessionScope.rulesUserSession.userWorkspace}</value>
    </managed-property>
    <managed-property>
      <property-name>uploadService</property-name>
      <value>#{uploadService}</value>
    </managed-property>
    <managed-property>
      <property-name>repositoryTreeState</property-name>
      <value>#{repositoryTreeState}</value>
    </managed-property>
    <managed-property>
      <property-name>init</property-name>
      <value>true</value>
    </managed-property>
</managed-bean>

  <managed-bean>
    <managed-bean-name>addDependency</managed-bean-name>
    <managed-bean-class>org.openl.rules.ui.repository.dependency.AddDependencyController</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
    <managed-property>
      <property-name>repositoryTreeState</property-name>
      <value>#{repositoryTreeState}</value>
    </managed-property>
  </managed-bean>

</faces-config>
