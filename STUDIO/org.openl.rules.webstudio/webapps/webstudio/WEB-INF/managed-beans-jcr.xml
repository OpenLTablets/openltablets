<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

    <managed-bean>
        <managed-bean-name>userSession</managed-bean-name>
        <managed-bean-class>org.openl.rules.ui.repository.UserSessionBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <!-- activeNode.* is short for userSession.selected.dataBean.* and userSession.selected.type -->
    <managed-bean>
    	<managed-bean-name>activeNode</managed-bean-name>
    	<managed-bean-class>org.openl.rules.ui.repository.ActiveNodeBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
    		<property-name>userSession</property-name>
    		<value>#{userSession}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>modalHandler</managed-bean-name>
        <managed-bean-class>org.openl.rules.ui.repository.ModalHandler</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
    		<property-name>context</property-name>
    		<value>#{userSession.context}</value>
    	</managed-property>
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>fileDialog</managed-bean-name>
    	<managed-bean-class>org.openl.rules.ui.repository.FileDialog</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
    		<property-name>context</property-name>
    		<value>#{userSession.context}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
    	<managed-bean-name>diff</managed-bean-name>
    	<managed-bean-class>org.openl.rules.ui.repository.DiffForm</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    	<managed-property>
    		<property-name>context</property-name>
    		<value>#{userSession.context}</value>
    	</managed-property>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>deployDescriptor</managed-bean-name>
        <managed-bean-class>org.openl.rules.ui.repository.deploy.bean.DeploymentDescriptorBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>addDeploymentEntry</managed-bean-name>
        <managed-bean-class>org.openl.rules.ui.repository.deploy.bean.AddDeploymentEntryBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>deploymentDescriptor</property-name>
            <value>#{deployDescriptor}</value>
        </managed-property>
    </managed-bean>

    <lifecycle>
		<phase-listener>org.openl.rules.ui.repository.JsfPhaseListener</phase-listener>
	</lifecycle>

</faces-config>
