<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
                              "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

	<navigation-rule>
		<from-view-id>/index-jcr.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>jcrMain</from-outcome>
			<to-view-id>/ui/jcr/jcrMain.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/ui/jcr/jcrMain.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index-jcr.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>search.advanced</from-outcome>
			<to-view-id>/ui/jcr/search/advanced.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{diff.compare}</from-action>
			<to-view-id>/ui/jcr/diff.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/ui/jcr/jcrMain.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

	<navigation-rule>
		<from-view-id>/ui/jcr/search/advanced.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>index</from-outcome>
			<to-view-id>/index-jcr.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>cancel</from-outcome>
			<to-view-id>/ui/jcr/jcrMain.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

    <navigation-rule>
		<from-view-id>/ui/jcr/diff.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>jcrMain</from-outcome>
			<to-view-id>/ui/jcr/jcrMain.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{diff.revertTo}</from-action>
			<to-view-id>/ui/jcr/jcrMain.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

    <navigation-rule>
        <from-view-id>/ui/deploy/deployMain.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/ui/deploy/deployMain.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
