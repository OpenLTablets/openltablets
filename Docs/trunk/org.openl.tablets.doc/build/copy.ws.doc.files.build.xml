<project default="copy_docs" basedir="..">

<property name="src_root" value="/___DEV/org.openl.examples_3.1/eclipse/workspace/org.openl.rules.webstudio/webapps/webstudio"/>
<property name="dst_root" value="site/ws/"/>
	
	
<target name = "copy_docs">
	<antcall target="copy_file" >
		<param name="file_name" value="ws-install.html"/>
		<param name="folder_name" value="html/"/>
	</antcall>	
	<antcall target="copy_file" >
		<param name="file_name" value="ws-intro.html"/>
		<param name="folder_name" value="html/"/>
	</antcall>	
	<antcall target="copy_file" >
		<param name="file_name" value="style1.css"/>
		<param name="folder_name" value="css/"/>
	</antcall>	
</target>	
	
	
<target name = "copy_file">
	
	<copy preservelastmodified="true" 
		file="${src_root}/${folder_name}${file_name}" 
		todir="${dst_root}/${folder_name}">
	</copy>
	
</target>	
	
	
</project>